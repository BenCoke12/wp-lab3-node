<%- include('header'); -%>

  <div class="content">
    <h1>Selected articles</h1>
    <table id="catalog">
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <th scope="row">
              <%= product.name %>
            </th>
            <td>
              <a href="/api/article/<%= product.reference %>">
                <%= product.reference %>
              </a>
            </td>
            <td>
              <%= product.category %>
            </td>
            <td>
              <%= product.price %>AED
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
  <br>
  <%- include('footer'); -%>